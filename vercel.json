{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend/frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "backend/server.js"
    },
    {
      "src": "/admin",
      "dest": "/backend/frontend/admin/index.html"
    },
    {
      "src": "/(about|contact|countries|feature|service)",
      "dest": "/backend/frontend/$1.html"
    },
    {
      "src": "/",
      "dest": "/backend/frontend/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/backend/frontend/$1"
    }
  ]
}