{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/admin",
      "dest": "frontend/admin/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/service",
      "destination": "/frontend/service.html"
    },
    {
      "source": "/about",
      "destination": "/frontend/about.html"
    },
    {
      "source": "/contact",
      "destination": "/frontend/contact.html"
    },
    {
      "source": "/countries",
      "destination": "/frontend/countries.html"
    },
    {
      "source": "/feature",
      "destination": "/frontend/feature.html"
    }
  ]
}