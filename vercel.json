{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/admin",
      "dest": "frontend/admin/index.html"
    },
    {
      "src": "/about",
      "dest": "frontend/about.html"
    },
    {
      "src": "/contact",
      "dest": "frontend/contact.html"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}